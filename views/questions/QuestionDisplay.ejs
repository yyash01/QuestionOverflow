<%- include('../partials/header'); -%>
    <div className="questionDisplay">
      <div class="card1">
        <div class="Row">
          <div class="Col">
            <h3><%= question.title %></h3>
            <p><%= question.query%></p>
          </div>
        </div>
        <div class="Row">
          <div class="Col">
            <button type="button" class="btn-success-solve">
              <a href="<%= question.link %>" class="textC">
                Solve Question<i style="margin-left: 10px;" class="fas fa-external-link-alt"></i>
              </a>
            </button>
            </div>
            <div class="Col" style="margin-left: 30px">
            <button type="button" class="btn-success-solveQ">
              <a href="/questions/<%= question._id %>/answer/new" class="textC">
                Post Solution<i style="margin-left: 10px;" class="fas fa-plus"></i>
              </a>
            </button>
          </div>
        </div>
      </div>
    </div>
    <% if(question.answers.length === 0){ %>
      <div class="dd-box">
        <div class="Row"><h3>Sorry No Answer Availaible  ðŸ˜”</h3></div>
      </div>
    <%} else { question.answers.forEach(function(answer){ %>
        <div class="dd-box">
            <div class="Row">
                <div class="Column">
                    <strong><%= answer.topic %></strong>
                    <span class="pull-right"> Votes : <%= answer.votes %>
                      <button type="button" class="btn-success-solveQ">
                        <a class="textC" href="/answer/show/<%=answer._id %>">View</a>
                      </button>
                    </span>
                  <% if(user && answer.author.id.equals(user._id)){ %>
                      <div class="simple">
                        <button type="button" class="btn-success-solve">
                          <a class="textC" href="/answer/<%=answer._id %>/edit">Edit</a>
                        </button>
                          <form id="delete-form" action="/answer/<%=answer._id %>?_method=DELETE" method="POST">
                              <button type="submit" class="btn-success-solve" style="color: aliceblue; margin-top: auto;">Delete</button>
                          </form>
                      </div>
                  <% } %>
                </div>
            </div>
        </div>
    <% })} %>
  </body>
</html>



